func RunCPULoad(coresCount int, timeMillis int, percentage int) {
	if timeMillis == 0 || percentage == 0 {
        return
    }
    runtime.GOMAXPROCS(coresCount)

	runMicrosecond := 1000 * percentage
	sleepMicrosecond := (100 - percentage) * 1000
	for i := 0; i < coresCount; i++ {
		go func() {
			runtime.LockOSThread()
			// every milliseconds, run for runMicrosecond microseconds, and sleep for sleepMicrosecond microseconds
			for {
				begin := time.Now()
				for {
					if time.Now().Sub(begin) > time.Duration(runMicrosecond) * time.Microsecond {
						break
					}
				}
				time.Sleep(time.Duration(sleepMicrosecond) * time.Microsecond)
			}
		}()
	}
	time.Sleep(time.Duration(timeMillis) * time.Millisecond)
}

